<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.mwc-tv-repo" name="MWCTV Repo" version="1.0" provider-name="MEGACreative">
	<extension point="xbmc.addon.repository" name="MWCTV Repository">
		<info compressed="false">http://raw.github.com/MEGACreative/mwc-tv/master/addons.xml</info>
		<checksum>http://raw.github.com/MEGACreative/mwc-tv/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/MEGACreative/mwc-tv/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>MWCTV Repository</summary>
		<description>Your HTPC Platform by MWC</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.megawatts.videos" name="MWC-TV" version="0.0.1" provider-name="MEGACreative">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
            <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">FTV Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</summary>
		<summary lang="en_US">FTV Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</summary>
		<description lang="en">FTV Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</description>
		<description lang="en_US">TFTV Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</description>
		<disclaimer lang="en">FTV Guide is based on the original TV Guide addon by twinther.</disclaimer>
		<language></language>
		<platform>all</platform>
		<license>GPLv2</license>
		<forum></forum>
		<source>https://github.com/MEGACreative/mwc-tv</source>
        <website></website>
		<email></email>
	</extension>
</addon>
</addons>
